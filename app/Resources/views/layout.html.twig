                        </div>
                        {% else %}
                        <div class="module">                        
                            <div class="module-right hidden-xs">
                                <a href="{{path('fos_user_security_login')}}" class="btn btn-sm">Connexion</a>
                                <a href="{{path('fos_user_registration_register')}}" class="btn btn-sm btn-filled" href="#">test</a>
                            </div>
                        </div>



                        {% endif %}

                    </div>
                    <!--end of module group-->
                </div>
            </nav>
        </div>
